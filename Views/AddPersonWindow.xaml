<Window x:Class="PupTrailsV3.Views.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Person" Height="640" Width="650" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{StaticResource DarkBackground}">
    <Grid Background="{StaticResource DarkBackground}" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Add New Person" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryText}"/>
                
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Name:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Grid.Column="1" x:Name="NameBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                <TextBlock Grid.Row="1" Text="Type:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="TypeBox" Margin="0,8,0,8" Padding="10" MinHeight="48" FontSize="13">
                    <ComboBoxItem>Adopter</ComboBoxItem>
                    <ComboBoxItem>Vet</ComboBoxItem>
                    <ComboBoxItem>Contact</ComboBoxItem>
                    <ComboBoxItem>Volunteer</ComboBoxItem>
                </ComboBox>

                <TextBlock Grid.Row="2" Text="Email:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="EmailBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                <TextBlock Grid.Row="3" Text="Phone:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="PhoneBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                <TextBlock Grid.Row="4" Text="Address:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="AddressBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="5" Text="Notes:" Margin="0,8,10,8" VerticalAlignment="Top" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="NotesBox" Margin="0,8,0,8" Padding="12" MinHeight="80" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="Export" Click="Export_Click" Background="{StaticResource AccentBlue}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Reset" Click="Reset_Click" Background="{StaticResource AccentOrange}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Delete" Click="Delete_Click" Background="{StaticResource AccentRed}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Cancel" Click="Cancel_Click" Background="#555555" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Save" Click="Save_Click" Background="{StaticResource AccentGreen}" Foreground="White" Padding="15,8" Width="100" FontSize="13" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
