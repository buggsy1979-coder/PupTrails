<Window x:Class="PupTrailsV3.Views.AddIntakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Puppy Intake" Height="520" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{StaticResource DarkBackground}">
    <Border Padding="25">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Top">
                <!-- Title -->
                <TextBlock Text="Record Puppy Intake" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryText}" Margin="0,0,0,20"/>

            <!-- Date -->
            <TextBlock Text="Intake Date (YYYY-MM-DD):" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="DateTextBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Puppy Count -->
            <TextBlock Text="Number of Puppies:" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="PuppyCountBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13" TextChanged="PuppyCount_Changed"/>

            <!-- Location -->
            <TextBlock Text="Location (Where Bought From):" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="LocationBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Cost Per Litter -->
            <TextBlock Text="Cost Per Litter ($):" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="CostPerLitterBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13" TextChanged="CostPerLitter_Changed"/>

            <!-- Cost Per Puppy -->
            <TextBlock Text="Cost Per Puppy ($):" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="CostPerPuppyBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13" TextChanged="CostPerPuppy_Changed" IsReadOnly="True" Background="#1A1A1A" Foreground="{StaticResource AccentBlue}" FontWeight="Bold"/>

            <!-- Total Cost (Read-only) -->
            <TextBlock Text="Total Cost ($):" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="TotalCostBox" Margin="0,0,0,20" Padding="12" Height="48" FontSize="13" IsReadOnly="True" Background="#1A1A1A" Foreground="{StaticResource AccentGreen}" FontWeight="Bold"/>

            <!-- Notes -->
            <TextBlock Text="Notes" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox x:Name="NotesBox" Margin="0,0,0,20" Padding="12" Height="100" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset" Click="Reset_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentOrange}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Delete" Click="Delete_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentRed}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Margin="0,0,10,0" Background="#555555" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Save" Click="Save_Click" Width="100" Height="40" Background="{StaticResource AccentGreen}" Foreground="White" Cursor="Hand" FontWeight="Bold" FontSize="13"/>
            </StackPanel>
        </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
