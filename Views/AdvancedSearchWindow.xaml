<Window x:Class="PupTrailsV3.Views.AdvancedSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Search - PupTrail" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackground}">
    <Border Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Advanced Search" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" Margin="0,0,0,20"/>

            <!-- Search Box -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Search Query" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="SearchBox" Margin="0,0,10,0" Padding="12" Height="48" FontSize="14" KeyDown="SearchBox_KeyDown"/>
                    <Button Grid.Column="1" Content="ðŸ” Search" Click="Search_Click" Width="120" Height="48" Background="{StaticResource AccentBlue}" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="0,0,10,0" Cursor="Hand"/>
                    <Button Grid.Column="2" Content="Clear" Click="Clear_Click" Width="100" Height="48" Background="#555555" Foreground="White" FontSize="13" FontWeight="SemiBold" Cursor="Hand"/>
                </Grid>

                <!-- Search Filters -->
                <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                    <TextBlock Text="Search in:" FontWeight="Bold" Margin="0,0,0,8" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                    <WrapPanel>
                        <CheckBox Name="SearchAnimalsCheck" Content="Animals" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchPeopleCheck" Content="People" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchTripsCheck" Content="Trips" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchVetVisitsCheck" Content="Vet Visits" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchAdoptionsCheck" Content="Adoptions" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchIntakesCheck" Content="Intakes" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchExpensesCheck" Content="Expenses" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchIncomeCheck" Content="Income" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchPuppyGroupsCheck" Content="Puppy Groups" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                        <CheckBox Name="SearchMoneyOwedCheck" Content="Money Owed" IsChecked="True" Margin="0,0,15,8" Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>

            <!-- Results -->
            <Border Grid.Row="2" Background="{StaticResource DarkCardBackground}" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Name="ResultsCountText" Text="No search performed yet" Margin="15,15,15,10" Foreground="{StaticResource SecondaryText}" FontSize="13"/>
                    <DataGrid Grid.Row="1" Name="ResultsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" BorderThickness="0" Background="{StaticResource DarkCardBackground}" Foreground="{StaticResource PrimaryText}" MouseDoubleClick="Result_DoubleClick" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                            <DataGridTextColumn Header="Name/Description" Binding="{Binding DisplayName}" Width="250"/>
                            <DataGridTextColumn Header="Additional Info" Binding="{Binding AdditionalInfo}" Width="250"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120"/>
                            <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Close Button -->
            <Button Grid.Row="3" Content="Close" Click="Close_Click" Width="120" Height="40" HorizontalAlignment="Right" Margin="0,20,0,0" Background="#555555" Foreground="White" FontSize="13" FontWeight="SemiBold" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
