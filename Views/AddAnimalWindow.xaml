<Window x:Class="PupTrailsV3.Views.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Animal" Height="650" Width="900" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{StaticResource DarkBackground}">
    <Grid Background="{StaticResource DarkBackground}" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Add New Animal" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryText}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left side - Form Fields -->
                    <Grid Grid.Column="0" Margin="0,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Name:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Column="1" x:Name="NameBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                        <TextBlock Grid.Row="1" Text="Breed:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="BreedBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                        <TextBlock Grid.Row="2" Text="Sex:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="SexBox" Margin="0,8,0,8" Padding="10" MinHeight="48" FontSize="13" MinWidth="120" IsEditable="False">
                            <ComboBoxItem>Male</ComboBoxItem>
                            <ComboBoxItem>Female</ComboBoxItem>
                            <ComboBoxItem>Unknown</ComboBoxItem>
                        </ComboBox>

                        <TextBlock Grid.Row="3" Text="Status:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="StatusBox" Margin="0,8,0,8" Padding="10" MinHeight="48" FontSize="13" MinWidth="120" IsEditable="False">
                            <ComboBoxItem>Planned</ComboBoxItem>
                            <ComboBoxItem>In Transport</ComboBoxItem>
                            <ComboBoxItem>In Care</ComboBoxItem>
                            <ComboBoxItem>Vet Pending</ComboBoxItem>
                            <ComboBoxItem>Ready</ComboBoxItem>
                            <ComboBoxItem>Foster</ComboBoxItem>
                            <ComboBoxItem>Adopted</ComboBoxItem>
                        </ComboBox>

                        <TextBlock Grid.Row="4" Text="Intake Date (YYYY-MM-DD):" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="IntakeDateTextBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                        <TextBlock Grid.Row="5" Text="Birthday (DOB) (YYYY-MM-DD):" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="DOBTextBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                        <TextBlock Grid.Row="6" Text="Collar Color:" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="CollarColorBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>

                        <TextBlock Grid.Row="7" Text="Weight (pounds + ounces):" Margin="0,8,10,8" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                        <TextBox Grid.Row="7" Grid.Column="1" x:Name="WeightBox" Margin="0,8,0,8" Padding="12" MinHeight="48" FontSize="13"/>
                    </Grid>

                    <!-- Right side - Photo Section -->
                    <Border Grid.Column="1" Background="{StaticResource DarkCardBackground}" Padding="15" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}">
                        <StackPanel>
                            <TextBlock Text="ðŸ¾ Animal Photo" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                            
                            <!-- Image Display -->
                            <Border Width="220" Height="220" BorderBrush="{StaticResource DarkBorder}" BorderThickness="2" CornerRadius="6" Margin="0,0,0,15" Background="#2A2A2A">
                                <Grid>
                                    <TextBlock x:Name="NoPhotoText" Text="No Photo" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}" FontSize="14" FontStyle="Italic"/>
                                    <Image x:Name="AnimalPhotoDisplay" Stretch="UniformToFill" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                            <!-- Photo Controls -->
                            <TextBlock Text="Upload a photo to help identify this animal." Foreground="{StaticResource SecondaryText}" FontSize="11" Margin="0,0,0,15" TextWrapping="Wrap" TextAlignment="Center"/>
                            <Button Content="ðŸ“ Upload Photo" Click="UploadPhoto_Click" Background="{StaticResource AccentGreen}" Foreground="White" Padding="15,10" FontSize="12" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,0,10"/>
                            <Button x:Name="RemovePhotoButton" Content="ðŸ—‘ï¸ Remove Photo" Click="RemovePhoto_Click" Background="{StaticResource AccentRed}" Foreground="White" Padding="15,10" FontSize="12" FontWeight="SemiBold" Cursor="Hand" IsEnabled="False"/>
                            <TextBlock x:Name="PhotoPathText" Text="" Foreground="{StaticResource SecondaryText}" FontSize="9" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Notes Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Notes" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryText}" Margin="0,0,0,10"/>
                        <TextBox x:Name="NotesTextBox" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" 
                                 MinHeight="80" 
                                 MaxHeight="150" 
                                 Padding="10" 
                                 FontSize="13"
                                 Background="{StaticResource DarkBackground}"
                                 Foreground="{StaticResource PrimaryText}"
                                 BorderBrush="{StaticResource DarkBorder}"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="ðŸ“„ Export" Click="ExportToFile_Click" Background="{StaticResource AccentBlue}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="140" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="ðŸ—‚ï¸ Select/Manage Groups" Click="SelectGroup_Click" Background="{StaticResource AccentBlue}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="200" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Reset" Click="Reset_Click" Background="{StaticResource AccentOrange}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Delete" Click="Delete_Click" Background="{StaticResource AccentRed}" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Cancel" Click="Cancel_Click" Background="#555555" Foreground="White" Padding="15,8" Margin="0,0,10,0" Width="100" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Save" Click="Save_Click" Background="{StaticResource AccentGreen}" Foreground="White" Padding="15,8" Width="100" FontSize="13" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
