<Window x:Class="PupTrailsV3.Views.AddVetVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Vet Visit" Height="800" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackground}">
    <Border Padding="25">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top">
                <!-- Title -->
                <TextBlock Text="Record Veterinary Visit" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" Margin="0,0,0,20"/>

                <!-- Date -->
                <TextBlock Text="Visit Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Name="DateTextBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

                <!-- Animal -->
                <TextBlock Text="Animal Name" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <ComboBox Name="AnimalBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13" DisplayMemberPath="Name" TextSearch.TextPath="Name" SelectionChanged="AnimalBox_SelectionChanged"/>

                <!-- Veterinarian -->
                <TextBlock Text="Veterinarian Name" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <ComboBox Name="VeterinarianBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13" DisplayMemberPath="Name" TextSearch.TextPath="Name"/>

                <!-- Vaccination Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’‰ Vaccinations" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="{StaticResource PrimaryText}"/>
                        
                        <TextBlock Text="Vaccination Type" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <ComboBox Name="VaccinationTypeBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12" SelectionChanged="VaccinationType_SelectionChanged">
                            <ComboBoxItem Content="Rabies shot"/>
                            <ComboBoxItem Content="Distemper"/>
                            <ComboBoxItem Content="DAPP"/>
                        </ComboBox>
                        
                        <TextBlock Text="Vaccinations Given:" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="VaccinationsGivenTextBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="12" IsReadOnly="True" Background="{StaticResource DarkCardBackground}" Foreground="{StaticResource AccentBlue}" TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Rabies Shot Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="RabiesShotDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                        
                        <TextBlock Text="Rabies Shot Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="RabiesShotCostBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                        
                        <TextBlock Text="Distemper Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DistemperDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                        
                        <TextBlock Text="Distemper Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DistemperCostBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                        
                        <TextBlock Text="DAPP Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DAPPDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                        
                        <TextBlock Text="DAPP Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DAPPCostBox" Margin="0,0,0,0" Padding="12" Height="48" FontSize="12" TextChanged="VaccinationField_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Worming Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ› Worming" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="{StaticResource PrimaryText}"/>
                        <TextBlock Text="Worming Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="WormingDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12"/>
                        <TextBlock Text="Worming Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="WormingCostBox" Margin="0,0,0,0" Padding="12" Height="48" FontSize="12" TextChanged="CostField_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- De-fleying Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ¦Ÿ De-fleying (Flea Treatment)" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="{StaticResource PrimaryText}"/>
                        <TextBlock Text="De-fleying Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DeFleeingDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12"/>
                        <TextBlock Text="De-fleying Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DeFleeingCostBox" Margin="0,0,0,0" Padding="12" Height="48" FontSize="12" TextChanged="CostField_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Dental Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ¦· Dental" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="{StaticResource PrimaryText}"/>
                        <TextBlock Text="Dental Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DentalDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12"/>
                        <TextBlock Text="Dental Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="DentalCostBox" Margin="0,0,0,0" Padding="12" Height="48" FontSize="12" TextChanged="CostField_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Spayed/Neutering Section -->
                <Border Background="{StaticResource DarkCardBackground}" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="âœ‚ï¸ Spayed/Neutering" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="{StaticResource PrimaryText}"/>
                        <TextBlock Text="Spayed/Neutering Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="SpayedNeuteringDateTextBox" Margin="0,0,0,10" Padding="12" Height="48" FontSize="12"/>
                        <TextBlock Text="Spayed/Neutering Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBox Name="SpayedNeuteringCostBox" Margin="0,0,0,0" Padding="12" Height="48" FontSize="12" TextChanged="CostField_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Total Visit Cost -->
                <TextBlock Text="Total Visit Cost ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Name="CostBox" Margin="0,0,0,20" Padding="12" Height="48" FontSize="13" IsReadOnly="True" Background="{StaticResource DarkCardBackground}" Foreground="{StaticResource AccentBlue}"/>

                <!-- Ready for Adoption -->
                <CheckBox Name="ReadyCheckBox" Content="Animal is now ready for adoption" Margin="0,0,0,20" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" FontSize="13"/>

                <!-- Notes Section -->
                <TextBlock Text="Additional Notes" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
                <TextBox Name="NotesTextBox" 
                         Margin="0,0,0,20" 
                         Padding="12" 
                         Height="100" 
                         FontSize="13"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="{StaticResource DarkCardBackground}"
                         Foreground="{StaticResource PrimaryText}"
                         BorderBrush="{StaticResource DarkBorder}"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Reset" Click="Reset_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentOrange}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Delete" Click="Delete_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentRed}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Margin="0,0,10,0" Background="#555555" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                    <Button Content="Save" Click="Save_Click" Width="100" Height="40" Background="{StaticResource AccentGreen}" Foreground="White" Cursor="Hand" FontWeight="Bold" FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
