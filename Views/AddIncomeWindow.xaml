<Window x:Class="PupTrailsV3.Views.AddIncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Income" Height="580" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackground}">
    <Border Padding="25">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Top">
                <!-- Title -->
                <TextBlock Text="Record Income" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentGreen}" Margin="0,0,0,20"/>

            <!-- Date -->
            <TextBlock Text="Income Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="DateTextBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Type -->
            <TextBlock Text="Income Type" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <ComboBox Name="TypeBox" Margin="0,0,0,15" Padding="10" Height="48" FontSize="13" SelectionChanged="TypeBox_SelectionChanged">
                <ComboBoxItem>Adoption Fee</ComboBoxItem>
                <ComboBoxItem>Donation</ComboBoxItem>
                <ComboBoxItem>Grant</ComboBoxItem>
                <ComboBoxItem>Sponsorship</ComboBoxItem>
                <ComboBoxItem>Group Adoption</ComboBoxItem>
                <ComboBoxItem>Single Adoption</ComboBoxItem>
                <ComboBoxItem>Fuel</ComboBoxItem>
                <ComboBoxItem>Cleaning</ComboBoxItem>
                <ComboBoxItem>Other</ComboBoxItem>
            </ComboBox>

            <!-- Amount -->
            <TextBlock Text="Amount ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="AmountBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Group Selection (for Group Adoption) -->
            <TextBlock x:Name="GroupLabel" Text="Group" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13" Visibility="Collapsed"/>
            <ComboBox x:Name="GroupBox" Margin="0,0,0,15" Padding="10" Height="48" FontSize="13" IsEditable="True" Visibility="Collapsed"/>

            <!-- Notes/Description -->
            <TextBlock Text="Notes/Description" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="NotesBox" Margin="0,0,0,20" Padding="12" Height="60" TextWrapping="Wrap" FontSize="13"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset" Click="Reset_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentOrange}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Delete" Click="Delete_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentRed}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Margin="0,0,10,0" Background="#555555" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Save" Click="Save_Click" Width="100" Height="40" Background="{StaticResource AccentGreen}" Foreground="White" Cursor="Hand" FontWeight="Bold" FontSize="13"/>
            </StackPanel>
        </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
