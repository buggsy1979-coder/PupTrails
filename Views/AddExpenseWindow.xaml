<Window x:Class="PupTrailsV3.Views.AddExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Expense" Height="720" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackground}">
    <Border Padding="25">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Top">
                <!-- Title -->
                <TextBlock Text="Record Expense" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentOrange}" Margin="0,0,0,20"/>

            <!-- Date -->
            <TextBlock Text="Expense Date (YYYY-MM-DD)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="DateTextBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Category -->
            <TextBlock Text="Category" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <ComboBox Name="CategoryBox" Margin="0,0,0,15" Padding="10" Height="48" FontSize="13">
                <ComboBoxItem>Fuel</ComboBoxItem>
                <ComboBoxItem>Food</ComboBoxItem>
                <ComboBoxItem>Laundry</ComboBoxItem>
                <ComboBoxItem>Supplies</ComboBoxItem>
                <ComboBoxItem>Veterinary</ComboBoxItem>
                <ComboBoxItem>Other</ComboBoxItem>
            </ComboBox>

            <!-- Purpose -->
            <TextBlock Text="Purpose" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="PurposeBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- From Location -->
            <TextBlock Text="From Location" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="FromBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- To Location -->
            <TextBlock Text="To Location" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="ToBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Distance (Kilometers) -->
            <TextBlock Text="Distance (Kilometers)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="DistanceBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Amount -->
            <TextBlock Text="Amount ($)" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="AmountBox" Margin="0,0,0,15" Padding="12" Height="48" FontSize="13"/>

            <!-- Receipt/Invoice Upload -->
            <TextBlock Text="Receipt/Invoice File" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox Name="ReceiptPathBox" Width="260" IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Content="Browse..." Click="BrowseReceipt_Click" Width="100"/>
            </StackPanel>

            <!-- Notes -->
            <TextBlock Text="Notes" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryText}" FontSize="13"/>
            <TextBox Name="NotesBox" Margin="0,0,0,20" Padding="12" Height="80" TextWrapping="Wrap" FontSize="13"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset" Click="Reset_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentOrange}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Delete" Click="Delete_Click" Width="100" Height="40" Margin="0,0,10,0" Background="{StaticResource AccentRed}" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Margin="0,0,10,0" Background="#555555" Cursor="Hand" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                <Button Content="Save" Click="Save_Click" Width="100" Height="40" Background="{StaticResource AccentGreen}" Foreground="White" Cursor="Hand" FontWeight="Bold" FontSize="13"/>
            </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
