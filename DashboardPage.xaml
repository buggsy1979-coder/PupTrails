<Page x:Class="PupTrailsV3.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="950"
      Title="DashboardPage">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Dashboard" FontSize="{StaticResource LargeHeaderSize}" FontWeight="Bold" Margin="0,0,0,25" Foreground="{StaticResource PrimaryText}"/>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{StaticResource DarkCardBackground}" CornerRadius="12" Padding="25" Margin="0,0,10,0" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Animals in Care" FontSize="14" Foreground="{StaticResource SecondaryText}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding AnimalsInCare}" FontSize="40" FontWeight="Bold" Foreground="{StaticResource AccentGreen}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{StaticResource DarkCardBackground}" CornerRadius="12" Padding="25" Margin="10,0" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Ready for Adoption" FontSize="14" Foreground="{StaticResource SecondaryText}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding AnimalsReadyForAdoption}" FontSize="40" FontWeight="Bold" Foreground="{StaticResource AccentOrange}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="{StaticResource DarkCardBackground}" CornerRadius="12" Padding="25" Margin="10,0" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Total Adopted" FontSize="14" Foreground="{StaticResource SecondaryText}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding AnimalsAdopted}" FontSize="40" FontWeight="Bold" Foreground="#4CAF50" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="3" Background="{StaticResource DarkCardBackground}" CornerRadius="12" Padding="25" Margin="10,0,0,0" BorderThickness="1" BorderBrush="{StaticResource DarkBorder}" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Monthly Profit/Loss" FontSize="14" Foreground="{StaticResource SecondaryText}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MonthlyProfit, StringFormat=C}" FontSize="40" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions Section -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Quick Access" FontSize="{StaticResource HeaderSize}" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryText}"/>

                <UniformGrid Grid.Row="1" Columns="4" Rows="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Button Tag="Animals" Background="{StaticResource AccentGreen}" Foreground="White" Margin="0,0,10,10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ•" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Animals" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Puppies" Background="#FF6B9D" Foreground="White" Margin="10,0,10,10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ï¿½" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Inventory" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="People" Background="{StaticResource AccentBlue}" Foreground="White" Margin="10,0,10,10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="People" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>

                    <Button Tag="VetVisits" Background="#E91E63" Foreground="White" Margin="0,10,10,10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ¥" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Vet Visits" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Adoptions" Background="#9C27B0" Foreground="White" Margin="10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="â¤ï¸" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Adoptions" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Intake" Background="#00BCD4" Foreground="White" Margin="10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¥" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Intake" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Expenses" Background="#FF5722" Foreground="White" Margin="10,10,0,10" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¸" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Expenses" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Income" Background="#4CAF50" Foreground="White" Margin="0,10,10,0" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Income" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="MoneyOwed" Background="#FFC107" Foreground="White" Margin="10,10,10,0" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ’³" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Money Owed" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Reports" Background="#607D8B" Foreground="White" Margin="10,10,10,0" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ˆ" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Reports" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                    <Button Background="#3F51B5" Foreground="White" Margin="10,10,0,0" Style="{StaticResource DashboardButtonStyle}" Click="DashboardButton_Click">
                        <StackPanel>
                            <TextBlock Text="ðŸ”" Style="{StaticResource DashboardButtonIconStyle}"/>
                            <TextBlock Text="Advanced Search" Style="{StaticResource DashboardButtonTextStyle}"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
